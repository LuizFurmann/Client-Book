<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/btnP"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="P"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_colorprimary_rounded"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/btnM"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_btn_transparent_rounded"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:textStyle="bold"
        android:text="M"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnG"
        app:layout_constraintStart_toEndOf="@id/btnP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/btnG"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_btn_transparent_rounded"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:textStyle="bold"
        android:text="G"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnGG"
        app:layout_constraintStart_toEndOf="@id/btnM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/btnGG"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_btn_transparent_rounded"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:textStyle="bold"
        android:text="GG"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btnEG"
        app:layout_constraintStart_toEndOf="@id/btnG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/btnEG"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_btn_transparent_rounded"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:textStyle="bold"
        android:text="EG"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnGG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>